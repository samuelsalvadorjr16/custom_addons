<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">


        <template id="assets_common" name="voucher printing assets" inherit_id="report.assets_common">
            <xpath expr="." position="inside">
                <link href="/account_prize_claim_pcso/static/src/less/voucher.less" rel="stylesheet"/>
            </xpath>
        </template>



        <record id="paperformat_transmittal" model="report.paperformat">
            <field name="name">Transmittal Report</field>
            <field name="default" eval="False" />
            <field name="format">custom</field>
            <field name="page_height">331</field>
            <field name="page_width">216</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">7</field>
            <field name="margin_bottom">7</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>


        <template id="print_transmittal_report">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">

                          <div><label>HEREREERERER</label></div>

                    </div>
                </t>
            </t>
        </template>

        <report id="action_print_transmittal_report"
            string="Transmittal Report"
            model="account.invoice"
            name="account_prize_claim_pcso.print_transmittal_report"
            file="account_prize_claim_pcso.print_transmittal_report"
            report_type="qweb-pdf"
            attachment_use="False"
            attachment="'transmittal_'+(object.partner_id.name or '')+'_'+(object.name or '')+'.pdf'" />

        <record id="action_print_transmittal_report" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="account_prize_claim_pcso.paperformat_transmittal"/>
            <field name="attachment_use">False</field>
        </record>

        <!-- OVERRIDE. FOR NOT ALLOWING ORDINARY USER TO VIEW THE DUPLICATE, INVOICES 
        <record id= "account.account_invoice_action_report_duplicate" model = 'ir.actions.report.xml'>
          <field name="groups_id" eval="[(6,0,[ref('account.group_account_invoice')])]"/>
        </record>           
        <record id= "account.account_invoices" model = 'ir.actions.report.xml'>
          <field name="groups_id" eval="[(6,0,[ref('account.group_account_invoice')])]"/>
        </record>     
        -->
    </data>
</openerp>
